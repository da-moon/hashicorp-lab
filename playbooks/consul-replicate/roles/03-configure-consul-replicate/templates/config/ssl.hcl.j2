{% if ssl_enabled is defined  %}ssl {
  enabled   = {{ ssl_enabled }}
  {% if ssl_enabled %}
{% if ssl_verify is defined  %}verify = {{ ssl_verify }}
{% endif %}
  {% if ssl_cert is defined and ssl_cert != "" %}cert = "{{ ssl_cert }}"
{% endif %}
  {% if ssl_key is defined and ssl_key != "" %}key = "{{ ssl_key }}"
{% endif %}
  {% if ssl_ca_cert is defined and ssl_ca_cert != "" %}ca_cert = "{{ ssl_ca_cert }}"
{% endif %}
  {% if ssl_ca_path is defined and ssl_ca_path != "" %}ca_path = "{{ ssl_ca_path }}"
{% endif %}
  {% if ssl_server_name is defined and ssl_server_name != "" %}server_name = "{{ ssl_server_name }}"
{% endif %}
{% endif %}
}
{% endif %}
